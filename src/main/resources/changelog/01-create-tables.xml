<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="rules" author="Dmitry Mikhalishchin" context="all">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="rules"/>
            </not>
        </preConditions>
        <createTable tableName="rules">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="uri" type="TEXT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="pack" type="JSONB">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="rules"/>
        </rollback>
    </changeSet>

    <changeSet id="rules-uri-index" author="Dmitry Mikhalishchin" context="all">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="rules" columnName="uri"/>
            <not>
                <indexExists indexName="ix_rules_uri"/>
            </not>
        </preConditions>
        <createIndex tableName="rules" indexName="ix_rules_uri">
            <column name="uri"/>
        </createIndex>
        <rollback>
            <dropIndex tableName="rules" indexName="ix_rules_uri"/>
        </rollback>
    </changeSet>

</databaseChangeLog>